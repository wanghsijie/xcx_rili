/* pages/others/calendar/calendar.wxss */
page{
  width:100%;
  height:100%;
  background:linear-gradient(-155deg, #d64ca6, #b23ccd);
  color:#fff;
}
.selected_date {
  width:100%;
  padding:30rpx 0 16rpx 0;
  overflow: hidden;
}
.selected_date view {
  width: 33.3%;
  float: left;
  display:block;
}
.calendar_panel {
  width: 100%;
  padding:0 5%;
  box-sizing:border-box;
}
.calendar_box {
  width: 100%;
  overflow: hidden;
}
.weekday_label {
  width: 14.28%;
  float: left;
  display: block;
  text-align: center;
  font-size: 26rpx;
  padding: 10rpx 0;
  position:relative;
}
.weekday_label>text {
  width:68rpx;
  height:68rpx;
  line-height:68rpx;
  display: inline-block;
  font-family:'PingFang SC';
  font-size:40rpx;
}
.select_icon {
  width: 16rpx;
  height: 30rpx;
}
.active_date {
  background: #fff;
  color: #333333;
  border-radius: 50%;
}
.calendar_box:nth-child(2) .weekday_label{
  float: right;
}
.text_center{
  font-family:'PingFang SC';
  text-align:center;
}
.icon-left{
  text-align:right;
  padding:0 10rpx;
  box-sizing:border-box;
}
.icon-right{
  text-align:left;
  padding:0 10rpx;
  box-sizing:border-box;
}
.calendar_panel .calendar_box:nth-child(2) .weekday_label:first-child text::after{
  content:'';
  display:none;
}
.calendar_panel .calendar_box:nth-child(3) .weekday_label:last-child text::after{
  content:'';
  display:none;
}
.calendar_panel .calendar_box:nth-child(4) .weekday_label:last-child text::after{
  content:'';
  display:none;
}
.calendar_panel .calendar_box:nth-child(5) .weekday_label:last-child text::after{
  content:'';
  display:none;
}
.calendar_panel .calendar_box:nth-child(6) .weekday_label:last-child text::after{
  content:'';
  display:none;
}
.calendar_box:first-child{
  background-color:#c32899;
}
.calendar_data{
  padding-top:10rpx;
  padding-bottom:10rpx;
}
.bit::before{
  content:'';
  width:10rpx;
  height:10rpx;
  border-radius:50%;
  background-color:#fff;
  position:absolute;
  left:50%;
  bottom:0rpx;
  margin-left:-5rpx;
}